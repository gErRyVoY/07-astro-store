---
interface Props {
    totalPages: number;
}

const { totalPages } = Astro.props;

const url = Astro.url;
const pageParam = Number(url.searchParams.get('page') ?? 1);

const currentPage = Math.max(
    pageParam > totalPages
        ? totalPages
        : pageParam, 1
);

const path = url.pathname;
---

<div class="flex justify-between my-12">
    <a
        href={ currentPage === 1
            ? `#`
            : `${path}?page=${Math.max(currentPage - 1, 1)}`
        }
        class={ currentPage === 1
            ? `button-disabled`
            : `button`
        }
    >
        Anteriores
    </a>

    <span>PÃ¡gina {currentPage} de {totalPages}</span>

    <a
        href={ currentPage === totalPages
            ? `#`
            : `${path}?page=${Math.min(currentPage + 1, totalPages)}`
        }
        class={ currentPage === totalPages
            ? `button-disabled`
            : `button`
        }
        href=""
    >
        Siguientes
    </a>
</div>


<style>
    @import "tailwindcss";
    
    .button {
        @apply p-2 bg-blue-500 text-white rounded;
    }

    .button-disabled {
        @apply p-2 bg-gray-600 text-white cursor-default rounded;
    }
</style>
